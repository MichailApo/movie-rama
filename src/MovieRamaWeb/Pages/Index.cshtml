@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using MovieRamaWeb.Data
@using MovieRamaWeb.Domain.Enums;
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="row">
        <div class="col-1">
            <a href="/?sortType=@MovieSortType.Likes&sortOrder=@Model.SortOrder">Likes</a>
        </div>
        <div class="col-1">
            <a href="/?sortType=@MovieSortType.Hates&sortOrder=@Model.SortOrder">Hates</a>
        </div>
        <div class="col-1">
            <a asp-page="/Index" asp-route-sortType="@MovieSortType.Date" asp-route-sortOrder="@Model.SortOrder">
                Date
            </a>
        </div>
    </div>
    @if (Model.SelectedCreatorId.HasValue)
    {
        <div class="row">
            <a href="/">Back to List</a>
        </div>
    }
    <div class="col-md-6">
        @foreach (var movie in Model.Movies)
        {
            <h1>@Html.DisplayFor(m => movie.Title)</h1>
            <div>
                Posted by
                <a href="/creator/@movie.Creator.Id">@movie.Creator.UserName</a>
                @movie.PublishedAt
            </div>
            <br>
            <p>@movie.Description</p>
            <div class="row">
                <a href="">@movie.NumberOfLikes likes</a>
                <a href="">@movie.NumberOfHates hates</a>

            </div>
        }
    </div>
    <div class="col-md-2">
        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-page="/moviesubmit">New Movie</a>
        }
    </div>
</div>



